<style type="text/css">
	table {
  border-width: 0;
  border-style: none;
  border-color: #0000ff;
  border-collapse: collapse;
	}

	td {
  border-left: solid 10px #000;
  padding: 0; 
  margin: 0; 
  width: 0px; 
  height: 10px; 
	}

	td.black { border-color: #000; }
	td.white { border-color: #fff; }
	div#qr, div#content{
  width:500px;
  margin: 0 auto;
  text-align: center;
	}

	div#qr, div#content{
  width:800px;
  margin: 0 auto;
  text-align: center;
	}

	div#content{
  margin-top: 30px;

	}
	#avatars li{
	float: left;
	width: 300px;
	}
</style>

<p>Group ID: <%= @group_id %></p>

<div id="content">
	<div id="qr">
		<%= raw @qr.as_html %>
	</div>

	<div id="avatars" data-group-id="<%= @group.group_id %>">
		<ul>
			<%= render @group.users %>
		</ul>
  </div>
	<br/>
	<%= link_to "entry complete", "/entry_complete/#{@group.group_id}" %>
</div>
